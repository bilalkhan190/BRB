<div class="formWrapper">

    <form class="needs-validation formSpace" id="contactForm" novalidate>
        <div class="alignContent">
        <h1>Contact Information</h1>
        <button type="button" class="btn custombtn customBtn-light w-auto ms-2" data-bs-toggle="modal"
                data-bs-target="#modalExample">
            Example
        </button>
        </div>
        <div class="row mt-3">
            <input id="hdfLastSectionVisitedId" name="LastSectionVisitedId" value="15" type="hidden" />
            <input id="hdfcontactInfoId" name="ContactInfoId"  type="hidden" />
            <div class="col-md-6">
                <div class="form-group">
                    <label for="validationCustom01">First Name</label>
                    <input type="text" class="form-control" maxlength="50" id="validationCustom01"
                           name="FirstName" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="validationCustom02">Last Name</label>
                    <input type="text" class="form-control" maxlength="50" id="validationCustom02" name="LastName"
                           required>
                </div>
            </div>
            <div class="col-md-12">
            <div class="form-group">
                <label for="Address">Address</label>
                <input name="Address1" id="Address" maxlength="50" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <input name="Address2" id="Address" maxlength="50" type="text" class="form-control" required>
            </div>
            </div>
            <div class="col-md-4">
            <div class="form-group">
                <label for="City" class="">City</label>
                <input name="City" id="City" type="text" class="form-control" required>
            </div>
            </div>
            <div class="col-md-4">
            <div class="form-group">
                <label for="State" class="">State</label>
                <select name="StateAbbr" id="selectform" class="form-control" required>
                    <option value="" selected=""></option>
                    <option value="Armed Forces Americas&nbsp;(except Canada)">
                        Armed Forces
