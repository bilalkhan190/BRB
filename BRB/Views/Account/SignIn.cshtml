@{
    Layout = null;
}
<link rel="stylesheet" href="~/theme/assets/style/style.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="~/theme/assets/js/index.js"></script>


<body>
    <div id="loader" class="loader-overlay" style="display: none;">
        <div class="loader-box">
            <div id="preLoader"></div>
        </div>
    </div>
    <div class="container-fluid signIn-wrapper">
        <div class="row align-items-center">
            <div class="col-md-6 p-0">
                <div class="sideImg">
                    <img src="~/theme/assets/images/sign-in.png" />
                </div>
            </div>
            <div class="col-md-6 p-0">
                <div class="formWrapper">
                    <form id="loginForm">
                        <img src="~/theme/assets/images/logo.png" />
                        <h1>Best Resume Builder</h1>
                        <div class="form-group mt-4">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label for="pwd">Password</label>
                            <input type="password" class="form-control" id="pwd" name="pswd" required>
                            @*<i class="bi bi-eye-slash" id="togglePassword"></i>*@
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-slash" viewBox="0 0 16 16 " id="togglePassword">
                                <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z" />
                                <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829l.822.822zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829z" />
                                <path d="M3.35 5.47c-.18.16-.353.322-.518.487A13.134 13.134 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7.029 7.029 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12-.708.708z" />
                            </svg>
                        </div>
                        <div class="formbtn-Wrapper">
                            <button id="btnLogin" type="button" class="btn btn-primary custombtn">Login</button>
                            <div class="divider">
                            </div>
                            <a href="@Url.Action("SignUp","Account")" class="btn btn-primary custombtn customBtn-light mt-4">Create New Account</a>
                            <p><a href="#">www.successfulimpressions.net</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script><script src="~/scripts/login/login.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.20/lodash.min.js" integrity="sha512-90vH1Z83AJY9DmlWa8WkjkV79yfS2n2Oxhsi2dZbIv0nC4E6m5AbH8Nh156kkM7JePmqD6tcZsfad1ueoaovww==" crossorigin="anonymous"></script>
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}