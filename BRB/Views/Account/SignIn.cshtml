@*@{
    Layout = null;
}*@

<link rel="stylesheet" href="~/theme/assets/style/style.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="~/theme/assets/js/index.js"></script>
<div class="container-fluid signIn-wrapper">
    <div class="row align-items-center">
        <div class="col-md-6 p-0">
            <div class="sideImg">
                <img src="./theme/assets/images/sign-in.png" />
            </div>
        </div>
        <div class="col-md-6 p-0">
            <div class="formWrapper">
                <form>
                    <img src="./theme/assets/images/logo.png" />
                    <h1>Best Resume Builder</h1>
                    <div class="form-group mt-4">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password</label>
                        <input type="password" class="form-control" id="pwd" name="pswd">
                    </div>
                    <div class="formbtn-Wrapper">
                        <button id="btnLogin" type="button" class="btn btn-primary custombtn">Login</button>
                        <div class="divider">
                        </div>
                        <a href="@Url.Action("SignUp","Account")" class="btn btn-primary custombtn customBtn-light mt-4">Create New Account</a>
                        <p><a href="#">www.successfulimpressions.net</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/scripts/login/login.js"></script>
}