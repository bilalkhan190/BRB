@{
    <div class="formWrapper p-0">
        <form id="FormSProductReport" class="needs-validation formSpace">
            <div class="alignContent">
                <h1>
                    Product Report
                </h1>
                <a href="/Admin/index" class="btn custombtn customBtn-light w-auto ms-2">
                    Back to Admin
                </a>
            </div>
            <p>
                Please enter report criteria:
            </p>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label foclassr="t">From<span class="text-danger">*</span></label>
                        <input type="date" placeholder="YYYY-MM-DD" name="fromDate" class="form-control" value="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label foclassr="t">To<span class="text-danger">*</span></label>
                        <input type="date" placeholder="YYYY-MM-DD" name="toDate" class="form-control" value="">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label foclassr="t">Domain<span class="text-danger">*</span></label>
                        <input type="text" placeholder="gmail.com" name="email" class="form-control" value="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label foclassr="t">Voucher<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="voucher" value="">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="formbtn-Wrapper mt-2">
                        <button type="submit" class="btn btn-primary custombtn w-auto">
                            Submit
                        </button>
                        <button type="reset" class="btn btn-primary custombtn w-auto">
                            Clear
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-wrap">
                        <table id="TblProductReport" class="table table-striped table-hover ProductReportTable mt-4">
                            <thead>
                                <tr><th>First Name</th><th>Last Name</th><th>Email</th><th>Is Active</th><th>Account Created</th><th>Product</th><th>Voucher</th><th>Resume Gen.</th><th>Restriction</th></tr>
                            </thead>
                            <tbody>
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>
}
@section Scripts{
    <script src="~/scripts/adminproductreport.js"></script>
}